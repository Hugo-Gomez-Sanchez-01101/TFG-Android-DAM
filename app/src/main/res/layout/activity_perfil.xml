<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCFBFBFB">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="119dp"
        android:layout_height="106dp"
        android:layout_margin="5dp"
        android:elevation="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186">

        <ImageButton
            android:id="@+id/imagenPerfil"
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/usuariotfg" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="128dp"
        android:background="@drawable/lapiz"
        android:backgroundTint="#1CB4AF"
        app:iconGravity="textEnd"
        app:iconPadding="1dp"
        app:iconSize="20dp"
        app:iconTint="@color/red_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblEmail"
        android:layout_width="238dp"
        android:layout_height="37dp"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#131212"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.367" />

    <TextView
        android:id="@+id/lblPerfil"
        android:layout_width="238dp"
        android:layout_height="37dp"
        android:layout_marginTop="44dp"
        android:freezesText="false"
        android:text="Mi Perfil"
        android:textAlignment="center"
        android:textColor="#0E0E0E"
        android:textColorHighlight="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblPhone"
        android:layout_width="362dp"
        android:layout_height="48dp"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="36dp"
        android:text="hola"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnListaOrdenadores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnListaOrdenadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="292dp"
        android:backgroundTint="@color/red_1"
        android:text="Lista de ordenadores"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />


    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red_1"
        android:text="Cerar Sesion"
        app:iconTint="@color/red_1"
        app:layout_constraintBottom_toTopOf="@+id/btnAjustes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnListaOrdenadores"
        tools:ignore="MissingConstraints"></Button>

    <ImageButton
        android:id="@+id/btnAjustes"
        android:layout_width="80dp"
        android:layout_height="83dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/ajustestfg"
        android:backgroundTint="#FFFFFF"
        android:hapticFeedbackEnabled="false"
        android:scaleType="centerInside"
        android:src="@drawable/ajustestfg"
        android:textColor="@color/red_1"
        android:textColorHighlight="@color/red_1"
        android:textStyle="bold"
        app:iconGravity="top"
        app:iconTint="@color/red_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ajustestfg" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/boton_navegacion"
        android:layout_width="443dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/red_1"
        app:itemBackground="@color/red_1"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/menu" />
</androidx.constraintlayout.widget.ConstraintLayout>