<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="730dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="80dp"
            android:background="@color/red_1"
            android:font="@font/dancing"
            android:text="Introduzca el precio del ordenador que desee"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="324dp"
            android:layout_height="53dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/red_1"
            android:entries="@array/precio"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="90dp"
            android:background="@color/red_1"
            android:text="Uso del ordenador"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="329dp"
            android:layout_height="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/red_1"
            android:entries="@array/uso"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/btnGenerarPc"
            android:layout_width="299dp"
            android:layout_height="43dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="90dp"
            android:backgroundTint="@color/red_1"
            android:text="GENERAR ORDENADOR"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/boton_navegacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/red_1"
        app:itemBackground="@color/red_1"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/menu" />
</androidx.constraintlayout.widget.ConstraintLayout>